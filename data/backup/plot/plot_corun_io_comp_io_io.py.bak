import itertools as it
import os
from plot_fio_comon import *
import subprocess
import sys
import tempfile

root_dir = os.getcwd()

data_dir = os.path.join(root_dir, "data", "driver")
plot_dir = os.path.join(root_dir, "fig")

# Baselines
baselines = [posix, iou_dfl, iou_poll, spdk, aeolia]
for idx, base in enumerate(baselines, start=id_start):
    base.id = idx
nr_base = len(baselines)

# Parameters used to filter data rows
iotypes = ["randread"]

iotypes_param = Param("iotype", "")
iodepths_param = Param("iodepth", ["1"])

data_files = []

# For I/O-I/O
csv_name = "data_corun_io_io_single_core"
input_csv = os.path.join(data_dir, csv_name + ".csv")

metrics = [f"{base.name}_lat_p999" for base in baselines]
metrics += [f"{base.name}_bw" for base in baselines]
iosizes_param = Param("iosize", ["4K"])
num_threads_param = Param("numjobs", ["1", "2", "4", "8", "12"])
for iotype in iotypes:
    output_csv = os.path.join(data_dir, f"tmp_{iotype}_overview_" + csv_name + ".csv")
    data_files.append(output_csv)

    iotypes_param.values = iotype
    params = [iotypes_param, iodepths_param, iosizes_param, num_threads_param]

    filter_csv(input_csv, output_csv, params, metrics)

# For I/O-compute
# Metrics used to filter data columns
csv_name = "data_corun_io_comp_bs"
input_csv = os.path.join(data_dir, csv_name + ".csv")

metrics = [f"{base.name}_bw" for base in baselines]
metrics += [f"{base.name}_bg" for base in baselines]
iosizes_param = Param("iosize", ["16K", "64K", "256K", "1M", "2M"])
num_threads_param = Param("numjobs", ["1"])
for iotype in iotypes:
    output_csv = os.path.join(data_dir, f"tmp_{iotype}_overview_" + csv_name + ".csv")
    data_files.append(output_csv)

    iotypes_param.values = iotype
    params = [iotypes_param, iodepths_param, iosizes_param, num_threads_param]

    filter_csv(input_csv, output_csv, params, metrics)

env = {
    key: value.format(
        target=target,
    )
    for key, value in base_env.items()
}

# Preset
width = 4.8
height = 2.8
file_name = output_name(__file__)
output = os.path.join(plot_dir, file_name)

# MP Layout
mp_layout = MPLayout(
    mp_startx   =   0.075,
    mp_starty   =   0.065,
    mp_width    =   0.85,
    mp_height   =   0.82,
    mp_rowgap   =   0.24,
    mp_colgap   =   0.16,
    num_rows    =   2,
    num_cols    =   2,
)
mp_layout_dict = asdict(mp_layout)

# Style
border = 3
line_width = 0.5
boxwidth = 1

# Font
font_dict = asdict(font)

# Offset
offset.title_offset="0,-0.4"
offset.xlabel_offset="0,0.4"
offset_dict = asdict(offset)

plot_script = base_preset.format(width=width, height=height, output=output)
plot_script += base_mp_layout.format(**mp_layout_dict)
plot_script += base_style.format(border=border, line_width=line_width, boxwidth=boxwidth)
plot_script += base_font.format(**font_dict)
plot_script += base_offset.format(**offset_dict)

# First subplot
plot_script += base_next_plot.format(title=r"(a) I/O-I/O: latency-task latency")
plot_script += """
set xlabel "# Latency-Task"
set ylabel "P99.9 Latency (ms)"
set yrange [0:48]
set ytic 12
"""
plot_script += f"plot \"{data_files[0]}\" \\"
base = baselines[0]
plot_script += base_line_curve.format(
    entry=f"{div_1000(base.id)}:xtic(4)",
    color=base.color,
    pt=base.point_t,
    title=base.title,
)
for base in baselines[1:3]:
    curve = base_line_curve.format(
        entry=f"{div_1000(base.id)}",
        color=base.color,
        pt=base.point_t,
        title=base.title,
    )
    plot_script += "'' \\" + curve
for base in baselines[3:]:
    curve = base_line_curve_notitle.format(
        entry=f"{div_1000(base.id)}",
        color=base.color,
        pt=base.point_t,
        title=base.title,
    )
    plot_script += "'' \\" + curve

# Second subplot
plot_script += base_next_plot.format(title=r"(b) I/O-I/O: total throughput")
plot_script += """
set ylabel "Throughput (GB/s)"
set yrange [0:7.2]
set ytic 1.8
"""
plot_script += f"plot \"{data_files[0]}\" \\"
base = baselines[0]
plot_script += base_line_curve_notitle.format(
    entry=f"{div_1000(next_col(base.id, nr_base, 1))}:xtic(4)",
    color=base.color,
    pt=base.point_t,
)
for base in baselines[1:]:
    curve = base_line_curve_notitle.format(
        entry=f"{div_1000(next_col(base.id, nr_base, 1))}",
        color=base.color,
        pt=base.point_t,
    )
    plot_script += "'' \\" + curve

# Third subplot
plot_script += base_next_plot.format(title=r"(c) I/O-compute: I/O throughput")
plot_script += """
set xlabel "I/O Size"
set ylabel "Throughtpu (GB/s)" offset 1,0
set yrange [0:6.2]
set ytic 1.5
"""
plot_script += f"plot \"{data_files[1]}\" \\"
base = baselines[0]
plot_script += base_line_curve_notitle.format(
    entry=f"{div_1000(base.id)}:xtic(3)",
    color=base.color,
    pt=base.point_t,
)
for base in baselines[1:3]:
    curve = base_line_curve_notitle.format(
        entry=f"{div_1000(base.id)}",
        color=base.color,
        pt=base.point_t,
    )
    plot_script += "'' \\" + curve
for base in baselines[3:]:
    curve = base_line_curve.format(
        entry=f"{div_1000(base.id)}",
        color=base.color,
        pt=base.point_t,
        title=base.title,
    )
    plot_script += "'' \\" + curve

# Fourth subplot
plot_script += base_next_plot.format(title=r"(d) I/O-compute: compute-task utilization")
plot_script += """
set ylabel "Batch kops per second" offset -2,0
set yrange [0:4]
set ytic 1
"""
plot_script += f"plot \"{data_files[1]}\" \\"
base = baselines[0]
plot_script += base_line_curve_notitle.format(
    entry=f"{div_1000(next_col(base.id, nr_base, 1))}:xtic(3)",
    color=base.color,
    pt=base.point_t,
)
for base in baselines[1:]:
    curve = base_line_curve_notitle.format(
        entry=f"{div_1000(next_col(base.id, nr_base, 1))}",
        color=base.color,
        pt=base.point_t,
    )
    plot_script += "'' \\" + curve

with tempfile.NamedTemporaryFile(mode="w+", suffix=".gp") as f:
    f.write(plot_script)
    f.flush()
    subprocess.run(["gnuplot", f.name], env=env)

for file in data_files:
    os.remove(file)
