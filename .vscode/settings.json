{
    "latex-workshop.latex.outDir": "./latex.out",
    "latex-workshop.latex.recipes":[
        {
            "name": "pdflatex -> bibtex -> pdflatex * 2",
            "tools": [
                "pdflatex",
                "bibtex",
                "pdflatex",
                "pdflatex"
            ]
        },
    ],
    "latex-workshop.latex.tools":[
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
                "-shell-escape",
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-output-directory",
                "%OUTDIR%",
                "%DOC%"
            ],
            "env": {
                "TEXINPUTS": ":sty",
            }
        },
        {
            "name": "bibtex",
            "command": "bibtex",
            "args": [
                "%OUTDIR%/%DOCFILE%"
            ],
            "env": {
                "TEXMFOUTPUT": "%OUTDIR%"
            }
        },
    ]
}